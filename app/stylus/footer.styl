.footer
	background url(../images/1.jpg) repeat center
	padding-top 10px
	padding-bottom 10px
	text-align center
	font-size 0.857rem
	color black
	+above(880px)
		text-align left
		font-size 1rem
		position absolute
		left 0
		bottom 0
		width 100%
		z-index 10
	+above(1200px)
		height 110px
	.logo
		width 200px
		float left
		margin-right 10px
		+above(880px)
			margin-right 38px
	&-bottom
		clear both
		+above(880px)
			padding-top 10px
		+above(1200px)
			padding-top 0
		clearfix()
	.cabinet-nav, .main-nav
		margin-top 17px
		a
			margin-right 10px
		.icon
			margin-right 6px
	.made-by
		a
			text-decoration underline
			&:hover
				text-decoration none
		+above(880px)
			float right
	.copyright
		+above(880px)
			display inline-block
			margin-top 22px
	.i-man-cherry
		vertical-align bottom
		margin-right 8px
	.i-man-walks, .i-man-ladder
		position absolute
		top -34px
		left 36%
		display none
		+above(1200px)
			display block
	.i-man-ladder
		top -22px
	.i-man-sit
		right 4%
		position absolute
		top -34px
	.container
		position relative