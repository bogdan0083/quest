html
  box-sizing border-box
  font-size 13px
  +above(880px)
    font-size 14px
    min-height 100%
    position relative
*, *:before, *:after 
  box-sizing inherit

body
  color white
  font-size 1rem
  line-height 1.4
  background white 
  font-family 'Blogger Sans', sans-serif
  font-weight 400
  overflow-x hidden
  background url(../images/2.jpg) repeat center

generateClasses($spritesheet_sprites)

a
  color inherit
  text-decoration underline
  &:hover
    text-decoration none
    
.icon
  display inline-block
  vertical-align middle
  position relative
  margin-right 5px
  &:before 
    content ''
    position absolute
    top 0 
    left 0
    width 100%
    height 100%
    opacity 0
  + span
    display inline-block
    vertical-align middle
    
.mobile-menu
  +above(880px)
    display none
    
img
  max-width 100%
  
.nav-trigger
  display block
  hamburger-generator()
  text-align center
  margin-top 10px
  position relative
  z-index 10
  float right
  position relative
  z-index 50
  &.active
    hamburger-animation()
    
  +above(880px)
    display none
    
.page-wrapper
  transition all 0.3s
  //position relative
  
  &:before
    content ''
    position fixed
    left 0
    top 0
    background-color #fff
    background-image linear-gradient(to right, rgba(151, 67, 199, 0.49) 0%, rgba(2, 221, 203, 0.49) 50%, rgba(41, 186, 253, 0.49) 100%)
    width 100%
    height 100%
    opacity 0.6
    z-index 17
    visibility hidden
    opacity 0
    transition opacity 0.3s 0.1s,visibility 0.3s
  &.active
    &:before
      visibility visible 
      opacity 0.6
      +above(880px)
        display none
      

